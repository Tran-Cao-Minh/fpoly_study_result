package ps18817_TranCaoMinh_Lab7;

abstract public class SinhVienIT extends SinhVienPoly{
	
	// Khai bao bien
	double diemJava,diemCss,diemHtml;
	
	// Ham tao co doi so (ham cha da co ham tao khong doi so)
	public SinhVienIT(String hoTen, int diemJava, int diemCss, int diemHtml)
	{
		super(hoTen,"IT");
		this.diemJava=diemJava;
		this.diemCss=diemCss;
		this.diemHtml=diemHtml;
	}
	
	// Ghi de phuong thuc Diem cua sinh vien poly
	double diemTB()
	{
		return (2*diemJava + diemHtml + diemCss)/4;
	}

}













